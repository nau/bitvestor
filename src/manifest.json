{
    "manifest_version": 3,
    "name": "Bitvestor",
    "description": "Bitvestor is a dollar cost averaging Bitcoin buying bot for Bitfinex exchange",
    "version": "0.1",
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["alarms", "storage"],
    "host_permissions": [
        "https://api-pub.bitfinex.com/*",
        "https://api.bitfinex.com/*"
    ],
    "action": {
        "default_popup": "popup.html"
    }
}
